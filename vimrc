" highlighting
syntax on
colorscheme molokai
set termguicolors
"set t_Co=256 " force 256 color

" setup undo folder
set undofile
set undodir=~/.vim/undo-history

" setup indentation
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" line numbers
set relativenumber
set nu

" save buffer when leaving window
set hidden

" search
set incsearch

" scroll
set scrolloff=8

" line length
set nowrap
set colorcolumn=80

" linting
set signcolumn=yes

" more space for messages
set cmdheight=2
